@model IEnumerable<HOCAF.Models.Ambiente>

@{
    ViewBag.Title = "Index";
}

<h2>Registrar Ambientes</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sede.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoAmbiente.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sede.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoAmbiente.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idAmbiente }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idAmbiente }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idAmbiente })
        </td>
    </tr>
}

</table>
