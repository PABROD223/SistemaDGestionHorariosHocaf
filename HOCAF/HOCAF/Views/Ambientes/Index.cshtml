@model IEnumerable<HOCAF.Models.Ambiente>

@{
    ViewBag.Title = "Ambientes";
}

<h2>Ambientes</h2>

<p>
    @Html.ActionLink("Crear ambiente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sede.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoAmbiente.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sede.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoAmbiente.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
     
        <td>
            <a href="@Url.Action("Edit", new { id=item.idAmbiente })"><span class="glyphicon glyphicon-edit"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new {id=item.idAmbiente})" class="text-success"><span class="glyphicon glyphicon-eye-open"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", new {id=item.idAmbiente})" class="text-danger"><span class="glyphicon glyphicon-remove"></span></a>
        </td>

        </tr>
    }

    </table>
   
