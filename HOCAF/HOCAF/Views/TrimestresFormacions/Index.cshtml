@model IEnumerable<HOCAF.Models.TrimestresFormacion>

@{
    ViewBag.Title = "TrimestresFormacion";
}

<h2>Trimestres formación</h2>

<p>
    @Html.ActionLink("crear trimestres formación", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JornadaTipoFormacion.idJornada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trimestre.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JornadaTipoFormacion.idJornada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trimestre.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { idTrimestre = item.idTrimestre, idJornadaJTF = item.idjornadaJTF, idTipoFormacionJTF = item.idTipoFormacionJTF  })"><span class="glyphicon glyphicon-edit"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new { idTrimestre = item.idTrimestre, idJornadaJTF = item.idjornadaJTF, idTipoFormacionJTF = item.idTipoFormacionJTF  })" class="text-success"><span class="glyphicon glyphicon-eye-open"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", new { idTrimestre = item.idTrimestre, idJornadaJTF = item.idjornadaJTF, idTipoFormacionJTF = item.idTipoFormacionJTF  })" class="text-danger"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
    </tr>
}

</table>
