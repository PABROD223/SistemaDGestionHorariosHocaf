@model IEnumerable<HOCAF.Models.TipoDocumento>

@{
    ViewBag.Title = "TipoDocumento";
}

<h2> Tipos de Documentos</h2>

<p>
    @Html.ActionLink("Crear nuevo tipo de documento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreDocumento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreDocumento)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.idDocumento })"><span class="glyphicon glyphicon-edit"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new { id=item.idDocumento })" class="text-success"><span class="glyphicon glyphicon-eye-open"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", new { id=item.idDocumento })" class="text-danger"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
    </tr>
}

</table>
