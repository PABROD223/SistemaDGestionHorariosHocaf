                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Trimestres")">Trimestres</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","TrimestreActuals")">Trimestre Actual</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <label for="drop-9">
                            <span class="mif-user mif-2x principales"></span>Horarios
                            <span class="mif-caret mif-3x principales"></span>
                            <span class="mif-expand-more mif-2 derecha"></span>
