                                <a href="@Url.Action("Index","ProgramaDeFormacions")">Programas Formación</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","TipoFormacions")">Tipos Formacion</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <label for="drop-7">
                            <span class="mif-user mif-2x principales"></span>Fichas
                            <span class="mif-caret mif-3x principales"></span>
                            <span class="mif-expand-more mif-2 derecha"></span>
