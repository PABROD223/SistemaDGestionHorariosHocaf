                            <li>
                                <a href="@Url.Action("Index","Ambientes")">Ambientes</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","TipoAmbientes")">Tipo Ambientes</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Dias")">Días</a>
                    </li>
                    <li><a href="@Url.Action("Index","Especialidads")">Especialidad</a></li>
                    <li>
                        <label for="drop-5">
                            <span class="mif-user mif-2x principales"></span>Jornadas
                            <span class="mif-caret mif-3x principales"></span>
                            <span class="mif-expand-more mif-2 derecha"></span>
                        </label>
                        <input type="checkbox" id="drop-5" />
                        <ul>
                            <li>
                                <a href="@Url.Action("Index","Jornadas")">Jornadas</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","JornadaTipoFormacions")">Jornadas Y Tipo Formacion</a>
