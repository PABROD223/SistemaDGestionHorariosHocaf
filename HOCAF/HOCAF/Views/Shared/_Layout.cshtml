                            <li>
                                <a href="@Url.Action("Index","TrimestresFormacions")">Jornadas Y Trimestres</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <label for="drop-6">
                            <span class="mif-user mif-2x principales"></span>Programas Formación
                            <span class="mif-caret mif-3x principales"></span>
                            <span class="mif-expand-more mif-2 derecha"></span>
