            </nav>
        </div>
        <!--Fin sidebar-->
        <div class="page-content">
            <div class="menu-nav">
                <span class="mif-chevron-left mif-3x boton" id="boton-menu"></span>
                <h4 style="text-align: center; vertical-align: middle">
                    <img src="../Assets/Images/logo-hocaf.png" alt="Logo" width="100" />
                </h4>
            </div>
            <div class="col-md-12">
                <div class="container">
                    <br />
                    <br />
                    @RenderBody()
                </div>
            </div>
        </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!--Site JS-->
    <script src="../../Assets/Js/Menu.js"></script>
    <!--Fin Site JS-->

    <script type="text/javascript">
        $('#boton-menu').on('click', function () {
            if (!$(".sidebar_container").hasClass("invisible")) {
                $(".sidebar_container").addClass("invisible");
                $(".page-content").addClass("mover-contenido");
                $("#boton-menu").removeClass("mif-chevron-left");
                $("#boton-menu").addClass("mif-chevron-right");
                $("#boton-menu").addClass("mover-boton");
            }
            else {
                $(".sidebar_container").removeClass("invisible");
                $(".page-content").removeClass("mover-contenido");
                $("#boton-menu").removeClass("mif-chevron-right");
                $("#boton-menu").addClass("mif-chevron-left");
                $("#boton-menu").removeClass("mover-boton");
            }
        })
    </script>

</body>
</html>
