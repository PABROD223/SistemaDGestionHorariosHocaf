@model IEnumerable<HOCAF.Models.TipoFormacion>

@{
    ViewBag.Title = "TiposFormacion";
}

<h2>Tipos de Formación</h2>

<p>
    @Html.ActionLink("Crear nuevo tipo de formación", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.idTipoFormacion })"><span class="glyphicon glyphicon-edit"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new { id=item.idTipoFormacion })" class="text-success"><span class="glyphicon glyphicon-eye-open"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", new { id=item.idTipoFormacion })" class="text-danger"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
    </tr>
}

</table>
