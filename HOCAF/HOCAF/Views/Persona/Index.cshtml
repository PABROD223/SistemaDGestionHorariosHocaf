@model IEnumerable<HOCAF.ViewModels.PersonaViewModel>

@{
    ViewBag.Title = "Personas Registradas";
}

<h2>Personas Registradas</h2>
<a href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span> Agregar Persona</a>
<hr />
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Tipo Documento</th>
                <th>Número Documento</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Mail</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.apellidos @item.nombres</td>
                    <td>@item.nombreTipoDocumento</td>
                    <td>@item.numeroDocumento</td>
                    <td>@item.telefono</td>
                    <td>@item.direccion</td>
                    <td>@item.correo</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id=item.idPersona})"><span class="glyphicon glyphicon-edit"></span></a>
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id=item.idPersona})" class="text-success"><span class="glyphicon glyphicon-eye-open"></span></a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id=item.idPersona})" class="text-danger"><span class="glyphicon glyphicon-remove"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>