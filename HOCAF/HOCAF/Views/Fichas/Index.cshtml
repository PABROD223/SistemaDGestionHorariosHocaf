@model IEnumerable<HOCAF.Models.Ficha>

@{
    ViewBag.Title = "Index";
}

<h2>Fichas</h2>

<p>
    @Html.ActionLink("Crear Ficha", "Create")
</p>
<table class="table">
    <tr>
        <th>
