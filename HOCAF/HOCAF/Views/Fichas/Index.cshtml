        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idFicha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoFicha.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jornada.nombre)
        </td>
