        <td>
            <a href="@Url.Action("Edit", new { id=item.idFicha })"><span class="glyphicon glyphicon-edit"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new { id=item.idFicha })" class="text-success"><span class="glyphicon glyphicon-eye-open"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", new { id=item.idFicha })" class="text-danger"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
