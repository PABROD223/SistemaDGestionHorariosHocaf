            @Html.DisplayFor(modelItem => item.Jornada1.nombre)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idPrograma)
        </td>
