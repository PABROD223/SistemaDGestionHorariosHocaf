@model HOCAF.Models.TipoDocumento
@{
    ViewBag.Title = "Agregar Tipo Documento";
}

<h2>Agregar</h2>

@using (Html.BeginForm()) {

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <div class="form-group">
            @*<label class="col-md-2 control-label">Nombre</label>*@
            @Html.LabelFor(model => model.nombreDocumento,null,new {@class="col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(model=>model.nombreDocumento,new {@class="form-control" })
                @Html.ValidationMessageFor(model=>model.nombreDocumento,null, new { @class="text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <input type="submit" name="btnEnviar" value="Agregar" class="btn btn-success" />
                <a href="@Url.Action("Index","TipoDocumento")" class="btn btn-default">Todos Los Documentos</a>
            </div>
        </div>
    </div>
}

