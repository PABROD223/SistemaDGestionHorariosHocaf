@model IEnumerable<HOCAF.Models.TipoDocumento>

@{
    ViewBag.Title = "Todos Los Documentos";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("+ Agregar Documento de Identidad", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreDocumento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreDocumento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idDocumento }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idDocumento }) |
